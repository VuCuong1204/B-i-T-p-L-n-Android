<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivMainImageBaby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_login"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMainTextBaby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Save Beautiful Timeline Moments Of Your Child's Life"
        android:textColor="@color/black_87"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMainImageBaby" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acbMainEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_rec_red_color_red_selected"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:paddingStart="20dp"
        android:paddingEnd="75dp"
        android:text="Continue with email "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:icon="@drawable/ic_email_main_x15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainTextBaby" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acbMainFb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_rec_blue_color_blue_selected"
        android:drawableStart="@drawable/ic_facebook_main_x15"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acbMainEmail" />

    <TextView
        android:id="@+id/tvMainWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="We won't post anything without your permisson"
        android:textColor="@color/black_40"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acbMainFb" />

    <LinearLayout
        android:id="@+id/lilMainRegister"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lilMainLogin"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvMainQuestionRegister"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:text="Do not have an account?"
            android:textColor="@color/black_40"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvMainRegister"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Create Account"
            android:textColor="@color/blue_link"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lilMainLogin"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvMainLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sign In "
            android:textColor="@color/blue_link"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvMainQuestionLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="now if you already have an account"
            android:textColor="@color/black_40"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>